---
import { siteConfig } from "../config";

const entrepreneurship = siteConfig.entrepreneurship;
const hasPrograms = entrepreneurship?.programs && entrepreneurship.programs.length > 0;
---

{
  entrepreneurship && hasPrograms && (
    <section
      id="entrepreneurship"
      class="p-8 sm:p-12 md:p-16 lg:p-24"
      style={`--accent-color: ${siteConfig.accentColor}; --accent-color-light: #3b82f6; --accent-color-dark: #1e40af;`}
    >
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4 space-y-4">
            <div>
              <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
                Entrepreneurship
              </h2>
              <div
                class="w-[75px] h-[5px] mt-2 rounded-full"
                style={`background-color: ${siteConfig.accentColor}`}
              />
            </div>

            <p class="text-base sm:text-lg text-gray-600 leading-relaxed">
              {entrepreneurship.shortDescription}
            </p>

            {entrepreneurship.skills && entrepreneurship.skills.length > 0 && (
              <div class="flex flex-wrap gap-2 pt-2">
                {entrepreneurship.skills.map((skill) => (
                  <span class="px-3 py-1.5 bg-gray-900 text-white rounded-md text-xs sm:text-sm font-medium">
                    {skill}
                  </span>
                ))}
              </div>
            )}
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-6">
              {entrepreneurship.programs.map((program) => (
                <div class="glow-container">
                  <article class="glow-card relative bg-white rounded-lg shadow-sm border border-gray-100 p-5 sm:p-6 md:p-8 transition-all duration-300">
                    <div class="glows"></div>

                    <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
                      <div>
                        <h3 class="text-xl sm:text-2xl font-semibold text-gray-900">
                          {program.name}
                        </h3>
                        <p class="text-sm sm:text-base text-gray-500">
                          {program.location}
                        </p>
                      </div>
                      <span
                        class="inline-flex items-center gap-2 text-xs sm:text-sm font-medium uppercase tracking-wide"
                        style={`color: ${siteConfig.accentColor}`}
                      >
                        <svg
                          class="w-4 h-4"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                          aria-hidden="true"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 6v6l4 2"
                          />
                        </svg>
                        {program.focus}
                      </span>
                    </div>

                    <p class="mt-4 text-sm sm:text-base text-gray-600 leading-relaxed">
                      {program.description}
                    </p>
                  </article>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

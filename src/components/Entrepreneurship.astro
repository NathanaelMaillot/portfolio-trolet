---
import { siteConfig } from "../config";

const entrepreneurship = siteConfig.entrepreneurship;
const hasPrograms = entrepreneurship?.programs && entrepreneurship.programs.length > 0;
---

{
  entrepreneurship && hasPrograms && (
    <section
      id="entrepreneurship"
      class="p-8 sm:p-12 md:p-16 lg:p-24"
      style={`--accent-color: ${siteConfig.accentColor}; --accent-color-light: #3b82f6; --accent-color-dark: #1e40af;`}
    >
      <div class="space-y-12">
        <div class="max-w-3xl space-y-4">
          <div>
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-5xl font-bold text-gray-900 leading-tight">
              <span class="block">Entrepreneur-</span>
              <span class="block">ship</span>
            </h2>
            <div
              class="w-[75px] h-[5px] mt-3 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <p class="text-base sm:text-lg text-gray-600 leading-relaxed">
            {entrepreneurship.shortDescription}
          </p>

          {entrepreneurship.skills && entrepreneurship.skills.length > 0 && (
            <div class="flex flex-wrap gap-2 pt-2">
              {entrepreneurship.skills.map((skill) => (
                <span class="px-3 py-1.5 bg-gray-900 text-white rounded-md text-xs sm:text-sm font-medium">
                  {skill}
                </span>
              ))}
            </div>
          )}
        </div>

        <div class="space-y-6">
          {entrepreneurship.programs.map((program) => (
            <article
              class="group relative flex flex-col gap-4 overflow-hidden rounded-3xl border border-slate-200 bg-white/80 p-5 sm:p-6 md:p-8 shadow-sm transition-all duration-300 hover:-translate-y-1 hover:border-[var(--accent-color)]/60 hover:shadow-xl"
            >
              <div class="space-y-2">
                <h3 class="text-xl sm:text-2xl font-semibold text-gray-900">
                  {program.name}
                </h3>
                <p
                  class="text-sm sm:text-base font-medium"
                  style={`color: ${siteConfig.accentColor}`}
                >
                  {program.focus}
                </p>
                <p class="text-sm sm:text-base text-gray-500">
                  {program.location}
                </p>
              </div>

              <p class="text-sm sm:text-base leading-relaxed text-gray-600 transition-colors duration-300 group-hover:text-gray-700">
                {program.description}
              </p>
            </article>
          ))}
        </div>
      </div>
    </section>
  )
}

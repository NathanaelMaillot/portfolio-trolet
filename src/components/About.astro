---
import { siteConfig } from "../config";
import CpuIcon from "lucide-astro/Cpu";
import Code2Icon from "lucide-astro/Code2";
import TrendingUpIcon from "lucide-astro/TrendingUp";
import BadgeCheckIcon from "lucide-astro/BadgeCheck";

const iconComponents = {
  cpu: CpuIcon,
  "code-2": Code2Icon,
  "trending-up": TrendingUpIcon,
  "badge-check": BadgeCheckIcon,
};
---

<section
  id="about"
  class="py-16 sm:py-20 lg:py-24 bg-gradient-to-b from-white to-gray-50"
>
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <div class="grid gap-10 lg:gap-16 lg:grid-cols-3 items-start">
      <div class="lg:col-span-1 space-y-4">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900">
          About Me
        </h2>
        <div
          class="w-[75px] h-[5px] rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        ></div>
      </div>

      <div class="lg:col-span-2">
        <p class="text-lg sm:text-xl leading-relaxed text-gray-600">
          {siteConfig.aboutMe}
        </p>
      </div>
    </div>

    <div class="mt-16">
      <h3 class="text-3xl font-bold text-center text-gray-900">
        Core Competencies
      </h3>

      <div class="mt-12 grid gap-8 md:grid-cols-2 xl:grid-cols-4">
        {
          siteConfig.skills.map((pillar) => {
            const id = pillar.title.toLowerCase().replace(/[^a-z0-9]+/g, "-");
            const IconComponent = iconComponents[pillar.icon] ?? CpuIcon;
            return (
              <article
                id={id}
                aria-labelledby={`${id}-title`}
                class="rounded-2xl border border-gray-200 bg-white shadow-md transition duration-300 hover:shadow-xl"
              >
                <header class="flex flex-col items-center px-6 pt-8 text-center">
                  <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-gray-100">
                    <IconComponent class={`h-6 w-6 ${pillar.iconColor}`} />
                  </div>
                  <h4
                    id={`${id}-title`}
                    class="text-xl font-semibold text-gray-900"
                  >
                    {pillar.title}
                  </h4>
                </header>
                <div class="px-6 pb-8">
                  <p class="mb-4 text-center text-sm text-gray-600 md:text-left">
                    {pillar.description}
                  </p>
                  <ul class="space-y-2 text-left text-sm text-gray-700">
                    {pillar.skills.map((skill) => (
                      <li class="flex items-start gap-2">
                        <span class="mt-1 inline-block h-2 w-2 rounded-full bg-blue-500"></span>
                        <span>{skill}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </article>
            );
          })
        }
      </div>
    </div>
  </div>
</section>
